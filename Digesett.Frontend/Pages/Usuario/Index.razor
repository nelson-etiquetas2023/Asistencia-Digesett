@page "/usuario/index"
@using Digesett.Shared.Models
@using System.Diagnostics
@using System.Text.Json
@inject IJSRuntime JSRuntime



<h3>Gestion de Usuarios</h3>

<div class="row">
    <div class="col-4">
        <button class="btn btn-primary mb-3" @onclick="LoadData">Load Data</button>
        <button class="btn btn-primary">Crear Usuario</button>
    </div>
</div>



<table class="table table-bordered table-striped" id="TableUsers">
    <thead>
        <tr>
            <td>Id.</td>
            <td>Nombre del Usuario</td>
            <td>Correo</td>
            <td>Departamento</td>
            <td>Cargo</td>
            <td>Telefono</td>
            <td>Tipo Usuario</td>
            <td>Activo</td>
            <td>Acciones</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in @users)
        {
            <tr>
                <th>@user.Id</th>
                <th>@user.Name</th>
                <th>@user.Email</th>
                <th>@user.Departament</th>
                <th>@user.Cargo</th>
                <th>@user.Phone</th>
                <th>@user.TypeUser</th>
                <th>@user.Active</th>
                <td>
                    <a href="#" class="me-2" style="text-decoration:none;" tabindex="0" data-toggle="tooltip" title="Editar Usuario">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="black" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                            <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z" />
                        </svg>
                    </a>
                    <a href="#" tabindex="0" data-toggle="tooltip" title="Eliminar Usuario">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="black" class="bi bi-trash" viewBox="0 0 16 16">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                            <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                        </svg>
                    </a>

                </td>
            </tr>
            
        }
    </tbody>
</table>



@code {

    public List<User>? users { get; set; } = null!;
    public bool isLoading;




    protected override async Task OnInitializedAsync()
    {
        users = await LoadData();
        await JSRuntime.InvokeAsync<object>("DataTablesUsers", "#TableUsers");

    }


    public async Task<List<User>> LoadData()
    {
        isLoading = true;
        var watch = Stopwatch.StartNew();
        var url = "http://localhost:5002/api/Users";
        using (var httpClient = new HttpClient())
        {
            var respuesta = await httpClient.GetAsync(url);
            var respuestaString = await respuesta.Content.ReadAsStringAsync();
            users = JsonSerializer.Deserialize<List<User>>(respuestaString,
            new System.Text.Json.JsonSerializerOptions() { PropertyNameCaseInsensitive = true });
        }
        watch.Stop();
        isLoading = false;
        return users;
    }
}
